<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colourPrimary</item>
        <item name="colorPrimaryDark">@color/colourPrimaryDark</item>
        <item name="colorAccent">@color/colourAccent</item>
        <item name="android:fontFamily">@font/sans_serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fontFamily">@font/sans_serif</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">@font/sans_serif</item>
    </style>

    <style name="Blank">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colourText</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:paddingEnd">@dimen/margin</item>
    </style>

    <style name="Button.About">
        <item name="android:layout_marginTop">@dimen/padding_spacing</item>
        <item name="android:layout_marginBottom">@dimen/padding_spacing</item>
    </style>

    <style name="Button.Action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin_table</item>
        <item name="android:layout_marginStart">@dimen/padding_button</item>
        <item name="android:layout_marginEnd">@dimen/padding_button</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colourText</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colourText</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:textAllCaps">false</item>
        <!--        <item name="android:button">@drawable/radio_button</item>-->
    </style>

    <style name="SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
    </style>

    <style name="Spinner.Full">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_table</item>
        <item name="android:layout_marginEnd">@dimen/margin_table</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_marginTop">@dimen/margin_table</item>
        <item name="android:layout_marginBottom">@dimen/margin_table</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colourText</item>
    </style>

    <style name="TextView.Auto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextView.Heading">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Spaced">
        <item name="android:layout_marginTop">@dimen/padding_spacing</item>
        <item name="android:layout_marginBottom">@dimen/padding_spacing</item>
    </style>

    <style name="TextView.Table">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/margin_table</item>
        <item name="android:layout_marginEnd">@dimen/margin_table</item>
    </style>

    <style name="TextView.Title" parent="TextView.Heading">
        <item name="android:textColor">@color/colourWhiteText</item>
    </style>

</resources>
