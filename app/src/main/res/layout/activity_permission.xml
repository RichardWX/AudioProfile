<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/TextView"
            android:text="@string/permission_instructions" />

        <Button
            style="@style/Button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:onClick="onClickRequestPermission"
            android:text="@string/permission_grant" />

        <Button
            style="@style/Button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_table"
            android:onClick="onClickOK"
            android:text="@android:string/ok" />

    </LinearLayout>

</LinearLayout>