<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layoutControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVersion"
                        style="@style/TextView.Spaced"
                        tools:text="VERSION" />

                    <LinearLayout style="@style/Blank" />

                    <ImageView
                        android:id="@+id/log"
                        android:layout_width="@dimen/icon_size_settings"
                        android:layout_height="@dimen/icon_size_settings"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/information" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textBuilt"
                    style="@style/TextView.Spaced"
                    tools:text="BUILT" />

                <TextView
                    android:id="@+id/textCopyright"
                    style="@style/TextView.Spaced"
                    tools:text="COPYRIGHT" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/layoutLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textLog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="LOG ENTRIES" />

            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin">

            <Button
                android:id="@+id/buttonClose"
                style="@style/Button.About"
                android:layout_centerHorizontal="true"
                android:text="@string/close" />

            <ImageView
                android:id="@+id/deleteLog"
                android:layout_width="@dimen/icon_size_settings"
                android:layout_height="@dimen/icon_size_settings"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/delete"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>