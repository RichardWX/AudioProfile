<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/content_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin">

        <com.rjw.audioprofile.utils.HSVColourWheel
            android:id="@+id/colourWheel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin_small"/>

        <com.rjw.audioprofile.utils.HSVValueSlider
            android:id="@+id/colourValue"
            android:layout_width="@dimen/colour_picker_height"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/colourView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/colour_picker_height"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/colour_picker"/>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin">

        <Button
            android:id="@+id/buttonCancel"
            style="@style/Button.Auto"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/cancel"
            android:onClick="onClickCancel"/>

        <Button
            android:id="@+id/buttonOK"
            style="@style/Button.Auto"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/ok"
            android:onClick="onClickOK"/>

    </LinearLayout>

</LinearLayout>