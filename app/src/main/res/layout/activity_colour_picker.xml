<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:orientation="horizontal">

        <com.rjw.audioprofile.utils.HSVColourWheel
            android:id="@+id/colourWheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_weight="1"
            android:padding="@dimen/margin_small" />

        <com.rjw.audioprofile.utils.HSVValueSlider
            android:id="@+id/colourValue"
            android:layout_width="@dimen/colour_picker_height"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin" />

    </LinearLayout>

    <ImageView
        android:id="@+id/colourView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/colour_picker_height"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/colour_picker" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin">

        <Button
            android:id="@+id/buttonCancel"
            style="@style/Button.Auto"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:onClick="onClickCancel"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/buttonOK"
            style="@style/Button.Auto"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:onClick="onClickClose"
            android:text="@string/ok" />

    </LinearLayout>

</LinearLayout>